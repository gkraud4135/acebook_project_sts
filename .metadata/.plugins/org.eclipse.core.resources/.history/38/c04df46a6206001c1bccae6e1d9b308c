<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<style>

</style>

<script>
var 웹소켓;
var txtChatMessage;
var chatMessages;
var 체팅방ID="${chatroomId}";
window.onload = function (){
	//객체로 사용할 메세지
	txtChatMessage = document.querySelector("#chat_message");
	//출력용 
	chatMessages = document.querySelector("#chat_messages");
	웹소켓 = new WebSocket("ws://localhost:8081/chat");
	웹소켓.onopen=function(){
		웹소켓.send(JSON.stringify({chatroom_id:체팅방ID, state:"ENTER",writer:{name:<%=session.getAttribute("sn")%>}}));
	};
	웹소켓.onclose=function(){
	
	}
	웹소켓.onmessage=function(result){		
		let 받은메세지 = result.data;
		chatMessages.innerHTML = 받은메세지+ "<br>" +chatMessages.innerHTML  ;		
	}

}

function 방에서나가다(){
	웹소켓.send(JSON.stringify({chatroom_id:체팅방ID, state:"LEAVE",writer:{name:<%=session.getAttribute("sn")%>}}));
	//웹소켓.close();
	parent.close_layer();
}
function 메세지를보내다(){
	let 메세지 = txtChatMessage.value;
	txtChatMessage.value="";
	txtChatMessage.focus();
	
	웹소켓.send(JSON.stringify({chatroom_id:체팅방ID, state:"CHAT", contents:메세지 ,writer:{name:<%=session.getAttribute("sn")%>}}))
}
</script>

<title>Insert title here</title>
</head>
<body>
<div>
<h1>채팅방</h1>
<br>
<button onclick="방에서나가다()">나가다</button><br>
<input type="text" id="chat_message"/><button onclick="메세지를보내다()">보내기</button><br>
   

<p id="chat_messages">

   <c:if test="${not empty ch}">
      <c:forEach var="ch" items="${ch}" >
		"<img class="profile" src ="/board/attach/${ch.writer.profile}" height="25" width="25"/><b>${ch.writer.name}</b> : ${ch.contents}"<br>
      </c:forEach>
   </c:if>

</p>
</div>
</body>
</html>